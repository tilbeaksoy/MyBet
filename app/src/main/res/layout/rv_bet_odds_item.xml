<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/background">
    <soup.neumorphism.NeumorphCardView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:neumorph_shapeAppearance="@style/NeumorphismCard"
        app:neumorph_backgroundColor="@color/background"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:id="@+id/ll_categories"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:gravity="start|center"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/home_team"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="Home Team"
                            android:layout_marginBottom="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="normal"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:textColor="#393f53"
                            android:lineSpacingExtra="3sp" />
                    </LinearLayout>

                        <LinearLayout
                            android:layout_width="80dp"
                            android:layout_height="34dp"
                            android:gravity="center"
                            android:layout_marginBottom="10dp"
                            android:layout_gravity="center"
                            android:background="@drawable/iconbackground"
                            >
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/home_team_odd"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="1"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:textStyle="normal"
                                android:gravity="center"
                                android:textSize="13sp"
                                android:textColor="#393f53"
                                android:lineSpacingExtra="3sp" />
                            <View
                                android:layout_marginTop="1dp"
                                android:layout_width="8dp"
                                android:layout_height="2dp"
                                android:layout_marginEnd="3dp"
                                android:background="@drawable/seperate_scores" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/away_team_odd"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="2"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:textStyle="normal"
                                android:gravity="center"
                                android:textSize="13sp"
                                android:textColor="#393f53"
                                android:lineSpacingExtra="3sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/away_team"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="Away Team"
                                android:layout_marginBottom="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="normal"
                                android:gravity="center"
                                android:textSize="12sp"
                                android:textColor="#393f53"
                                android:lineSpacingExtra="3sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/add_To_cart"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="10dp"
                                android:src="@drawable/ic_add_to_chart"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </soup.neumorphism.NeumorphCardView>
</LinearLayout>